@charset "utf-8";
/* CSS Document */

.item {
	width: 215px;
	border: 1px solid #CCC;
	float:left;
	margin-left:9px;
	margin-right:9px;
	margin-bottom:15px;
}
.item .activity_description {
	font-size: 12px;
	font-style: italic;
	font-weight: bold;
	margin-left: 5px;
}

.box-photo {
	margin: 7px;
	width: 200px;
}
.members ul{
	margin-left:5px;
	margin-bottom:0px;
	
}
.item .members ul{
	margin-left:7px;
}
.members ul li {
	padding-left: 5px;
	padding-right: 5px;
	padding-top: 5px;
	padding-bottom:5x;
	height: 40px;
	list-style-type: none;
	border-bottom-width: 1px;
	border-bottom-style: groove;
	border-bottom-color: #999;
	background-color: #F2F0F0;
}
.item .activity_info {
	font-size: 12px;
	margin-left: 5px;
}

.members ul li img {
	width:35px;
	margin-right:5px;
}
.item .members ul li a {
	font-size: 12px;
	line-height: 40px;
	color: #000;
	font-style: oblique;
	font-weight: normal;
	text-decoration: none;
}
.item .actions .btn.favor_link {
	position:absolute;
	top:-5px;
	left:20px;
}
.item .actions .btn.join_link {
	position:absolute;
	top:-5px;
	right:20px;
}