@charset "utf-8";
/* CSS Document */

.item {
	width: 215px;
	border: 1px solid #CCC;
	float:left;
	margin-left:9px;
	margin-right:9px;
	margin-bottom:15px;
}
.item .activity_description, .group_description {
	font-size: 12px;
	font-style: italic;
	font-weight: bold;
	margin-left: 5px;
}

.box-photo {
	margin: 7px;
	width: 200px;
}
.members ul{
	margin-left:5px;
	margin-bottom:0px;
}
.item .members ul{
	margin-left:7px;
}
.members ul a li {
	padding-left: 5px;
	padding-right: 5px;
	padding-top: 5px;
	padding-bottom:5x;
	height: 40px;
	list-style-type: none;
	border-bottom-width: 1px;
	border-bottom-style: solid;
	border-bottom-color: #CCC;
	background-color: #F2F0F0;
}
.item .activity_info, .item .group_info {
	font-size: 12px;
	margin-left: 5px;
}

.members ul li img {
	width:35px;
	margin-right:5px;
}
.item .members ul a li {
	font-size: 12px;
	line-height: 40px;
	color: #000;
	font-weight: normal;
}
.item .members ul a{
	text-decoration: none;
}
.item .actions .btn.favor_link {
	position:absolute;
	top:-5px;
	left:20px;
}
.item .actions .btn.join_link, .item .actived_invitation, .item .actived_sended_request{
	position:absolute;
	top:-5px;
	right:20px;
}

.item .actions .join_link_delete{
  position: absolute;
  top: -5px;
  left: 20px;
}
.album{
  width:200px;
  margin-right:20px;
  margin-bottom:40px;
  float:left;
}

#init_profile .modal-body span label, #accordion2 span label, .new_group_form span label{
  float: left;
  padding-top: 2px;
  margin-right: 20px;
}

#init_profile .modal-body span input{
  float: left;
  margin-right: 2px;
  margin-bottom: 20px;
}
#accordion2 span input, .new_group_form span input{
  float: left;
  margin-right: 2px;
}
.control-group{
  clear: both;
}

ul.ui-autocomplete {
  position: fixed;
  list-style: none;
  margin: 0;
  padding: 0;
  border: solid 1px #999;
  cursor: default;
  background-color: #0CC;
  opacity: 1;
  li {
    background-color: #CCC;
    border-top: solid 1px #DDD;
    margin: 0;
    padding: 0;
    a {
      color: #000;
      display: block;
      padding: 3px;
    }
    a.ui-state-hover, a.ui-state-active {
      background-color: #FFFCB2;
    }
  }
} 

.modal-left{
  float: left;
  width: 330px;
}

.modal-right{
  float: left;
  width: 200px;
}

#init_profile{
  width: 600px;
}

.table-condensed tbody td{
  line-height: 60px;
}

.table-condensed tbody td form{
  margin: 0px;
}
.table-condensed tbody td img{
  width: 50px;
  height:50px;
}
.pagination{
  float: right;
}

.user_search_bar{
  margin-left: -60px;
  margin-top: 65px;
  position: fixed;
}

.user_search_bar h4{
  color: #aaa;
  border-bottom: 1px solid #CCC;
  padding-bottom: 2px;
}

.user_search_bar a{
  font-size: 18px;
  margin-bottom: 10px;
  display: block;
  border-bottom: 1px solid #CCC;
  padding-bottom: 3px;
  text-decoration: none;
}
.table tbody td a{
  text-decoration: none;
}

.user-search-query-input{
  width: 160px;
  background-color: #F7F7F7;
}

.friend_list li a img{
  width: 40px;
  height: 40px;
}

.normal-font{
  color: #999;
}

.activity_info_font{
  color: #EE0000;
}

