@charset "utf-8";
/* CSS Document */
body{
	background-image: url(<%= asset_path 'paper.jpg' %>);
	background-repeat: repeat;	
	}
.logup-top{
	
	padding-top: 60px;
	padding-bottom: 60px;
	width: 100%;
	height: 60px;	
	margin-left: auto;
	margin-right: auto;
	margin-bottom: 50px;
	text-align: center;
	border-bottom-color: #fff;
	border-bottom-style: groove;
	border-bottom-width: 1px;
	
   box-shadow:3px 3px 3px rgba(0, 64, 128, 0.3); 
 
	}
	
.logup-top .logo, .login-top .logo{
	text-align: center;
	line-height: 60px;
	font-size: 30px;
	font-weight: bolder;
	color: #000;
	}

	
.logup-top p{
	text-align: center;
	font-style: italic;
	font-size: 20px;
	}
	
.logup-main{
	margin-top: 0px;	 
	}
	
.login-top{
	width: 100%;
	padding-top: 50px;
	height: 60px;
	text-align: center;	
	margin-bottom: 50px;
  word-spacing: 5px;
	}
	
.other-login{
	
	text-align: center;
	height: 50px;	
	}
	
.other-login .rr-login{
	display: inline;	
	margin-right: 10px;
	}
	
.other-login .sina-login{
	display: inline;	
	margin-left: 10px;	
	}
.login-main{
	padding-left: 180px;
  }
.login-main .btn{
  margin-left: 180px;
  margin-top: -10px;
  margin-right: 60px;
  display: inline;
}

.logup-main img{
  margin-top: 35px;
}

#flash_alert{
  text-align: center;
}
