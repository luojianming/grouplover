<h1>Listing invitations</h1>

<table>
  <tr>
    <th>Initiate group</th>
    <th>Time</th>
    <th>Location</th>
    <th>Description</th>
    <th>Status</th>
    <th>Lover style</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @invitations.each do |invitation| %>
  <tr>
    <td><%= invitation.initiate_group_id %></td>
    <td><%= invitation.time %></td>
    <td><%= invitation.location %></td>
    <td><%= invitation.description %></td>
    <td><%= invitation.status %></td>
    <td><%= invitation.lover_style %></td>
    <td><%= link_to 'Show', invitation %></td>
    <td><%= link_to 'Edit', edit_invitation_path(invitation) %></td>
    <td><%= link_to 'Destroy', invitation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

