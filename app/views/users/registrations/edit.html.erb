<div class="container">
<h4>更新帐号</h4>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>
  <%= f.input :name, :autofocus => true, :label => "姓名" %>
  <%= f.input :email, :required => true, :label => "邮箱" %>
  <%= f.input :password, :autocomplete => "off", :hint => "如果不想改变密码请不要填值", :required => false, :label => "密码" %>
  <%= f.input :password_confirmation, :required => false, :label => "密码确认" %>
  <%= f.input :current_password, :label => "当前密码",  :required => true %>
  <%= f.button :submit, '更新', :class => 'btn-primary' %>
<% end %>
<p> <%= link_to "注销帐号", registration_path(resource_name), :data => { :confirm => "确定注销?" }, :method => :delete %>.</p>
<%= link_to "返回", :back %>
</div>
