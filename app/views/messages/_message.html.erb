<li>
    <% if message.sender == current_user %>
      <div class="bs-docs-example-popover" >
        <div class="popover">
          <h3 class="popover-title"><%= message.sender.name %>
            <span class="created_at"><%= message.created_at.strftime("%H:%M") %></span>
          </h3>
          <div class="popover-content"><%= message.content %></div>
        </div>
      </div>
    <% else %>
      <div class="bs-docs-example-popover" style="margin-left:150px;">
        <div class="popover" >
          <h3 class="popover-title"><%= message.sender.name %>
            <span class="created_at"><%= message.created_at.strftime("%H:%M") %></span>
          </h3>
          <div class="popover-content"><%= message.content %></div>
        </div>
      </div>
    <% end %>
</li>

