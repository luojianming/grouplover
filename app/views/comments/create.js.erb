<% if @commentable_type == "Photo" %>
  $('#comments').append("<%= j render('photos/comment', :comment => @comment) %>");
  $('#photo_reply').html('');
  $('.reply_input').css("display","block");
<% elsif @model_name == "DynamicStatus" %>
