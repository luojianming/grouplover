<% if @commentable_type != nil %>
  $('#comments').append("<%= j render('model_comments/comment', :comment => @comment) %>");
  $('#reply_form').html('');
  $('.reply_input').css("display","block");
<% elsif @feedable_type == "DynamicStatus" %>
  $('#feed_comments_<%= @general_feed_id %>').append('<%=j render 'comment_reply_box',
                                                     :replied_dynamic_status => @comment,
                                                     :general_feed_id => @general_feed_id,
                                                     :feedable => DynamicStatus.find(@feed.feedable_id)%>');
  $('#feed_reply_<%= @general_feed_id%>').html('');
  $('#feed_reply_<%= @general_feed_id%>').parent('.status_content_box').children('.reply_input').css("display","block");
