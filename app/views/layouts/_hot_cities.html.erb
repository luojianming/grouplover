<% cities = ['全国','北京','上海','长沙'] %>
<% for city in cities %>
  <!--
    <li><%= link_to city, :controller => "invitations", :action => "index",:city => city%></li>
  -->
  <li><a href="#" class="cities"><%= city%></a></li>
<% end %>

<script>
$('.cities').click(function(){
  $('#city_value').val($(this).text());
  $('#invitations_search_submit').click();
});
</script>
