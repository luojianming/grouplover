<% content_for :stylesheet do %>
  <%= stylesheet_link_tag "style", "bootstrap_and_overrides", "homepage", "bootswatch" %>
<% end %>
<div class="container">
  <%= render 'shared/header' %>
  <div class="row">
    <div class="span9">	
      <ul id="tab" class="nav nav-tabs">
        <li class="active"><a href="#basic_info" data-toggle="tab">基本资料</a></li>
        <li><a href="#hobbies" data-toggle="tab">兴趣爱好</a></li>
        <li><a href="#contact_info" data-toggle="tab">联系方式</a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane fade in active" id="basic_info">						
          <div class="hero-unit hero-unit-bg">  

            <form class="form-horizontal profile_show"> 
              <!--<legend>基本资料<a class="pull-right" style="font-size:15px;color:#3FF;" onClick=""><i class="icon-edit"></i>编辑</a></legend>-->
              <legend>基本资料</legend>

              <div class="control-group">
                <label class="control-label">现居地</label>
                <div class="controls">
                  <%= @user.profile.location %>
                </div>
              </div>

              <div class="control-group">
                <label class="control-label">性别</label>
                <div class="controls">
                  <% if @user.profile.sex %>
                    男
                  <% else %>
                    女
                  <% end %>
                </div>
              </div>
              <div class="control-group">
                <label class="control-label">生日</label>
                <div class="controls">
                  <%= @user.profile.birthday %>
                </div>
              </div>
              <div class="control-group">
                <label class="control-label">家乡</label>
                <div class="controls">
                  <%= @user.profile.hometown %>
                </div>
              </div>
              <div class="control-group">
                <label class="control-label">学校</label>
                <div class="controls">
                  <%= @user.profile.school %>
                </div>
              </div>
              <div class="control-group">
                <label class="control-label">标签</label>
                <div class="controls">
                  <%= @user.profile.style %>
                </div>
              </div>
              <div class="control-group">
                <label class="control-label">兴趣</label>
                <div class="controls">
                  <%= @user.profile.hobby %>
                </div>
              </div>
              <div class="control-group">
                <label class="control-label">喜欢的类型</label>
                <div class="controls">
                  <%= @user.profile.lover_style %>
                </div>
              </div>
              <div class="control-group">
                <label class="control-label">行业</label>
                <div class="controls">
                  <%= @user.profile.profession %>
                </div>
              </div>
            </form>
          </div>                                                                              
        </div>

        <div class="tab-pane fade" id="hobbies">
          <div class="hero-unit hero-unit-bg">
            <form class="form-horizontal"> 
              <legend>兴趣爱好</legend>
              <div class="control-group">
                <label class="control-label">擅长的乐器</label>
                <div class="controls">
                  <%= @user.profile.musical_instruments %>
                </div>
              </div>

              <div class="control-group">
                <label class="control-label">喜欢的书籍</label>
                <div class="controls">
                  <%= @user.profile.books %>
                </div>
              </div>

              <div class="control-group">
                <label class="control-label">喜欢的运动</label>
                <div class="controls">
                  <%= @user.profile.sports %>
                </div>
              </div>

              <div class="control-group">
                <label class="control-label">喜欢的音乐</label>
                <div class="controls">
                  <%= @user.profile.music %>
                </div>
              </div>
              <div class="control-group">
                <label class="control-label">喜欢的电影</label>
                <div class="controls">
                  <%= @user.profile.movie %>
                </div>
              </div>
              <div class="control-group">
                <label class="control-label">喜欢的动漫</label>
                <div class="controls">
                  <%= @user.profile.animation %>
                </div>
              </div>
              <div class="control-group">
                <label class="control-label">玩的游戏</label>
                <div class="controls">
                  <%= @user.profile.games %>
                </div>
              </div>
            </form>
          </div>
        </div> 

        <div class="tab-pane fade" id="contact_info">
          <div class="hero-unit hero-unit-bg">
            <form class="form-horizontal"> 
              <legend>联系方式</legend>
              <div class="control-group">
                <label class="control-label">电话</label>
                <div class="controls">
                  <%= @user.profile.telephone %>
                </div>
              </div>

              <div class="control-group">
                <label class="control-label">MSN</label>
                <div class="controls">
                  <%= @user.profile.msn %>
                </div>
              </div>

              <div class="control-group">
                <label class="control-label">QQ</label>
                <div class="controls">
                  <%= @user.profile.qq %>
                </div>
              </div>

              <div class="control-group">
                <label class="control-label">Email</label>
                <div class="controls">
                  <%= @user.profile.email %>
                </div>
              </div>
            </form>
          </div>
        </div> 
      </div><!--tabcontent-->
    </div><!--span9-->
    <div class="span3">
      朋友评价
    </div>
  </div>
</div>

<script type="text/javascript">
function displayInputArea(){
  $('.description').html("还能输入<span class=\"wordsOffset\">200</span>个字<button class=\"pull-right\">提交</button><textarea  id=\"description\" row=\"3\" class=\"span7\"  onkeyup=\"discountWordNum()\" onmouseup=\"discountWordNum()\"></textarea>");
}

function discountWordNum(){
  var str = $('#description').val();
  //	alert(str.length);
  $('.wordsOffset').html(200 - str.length) ;
}
</script>

<script>
$('.group_member .pull-left').tooltip({
  selector: "a[rel=tooltip]"})
  $('.group_showpanel_left').tooltip({
    selector: "a[rel=tooltip]"})
</script>
