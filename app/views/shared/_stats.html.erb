<% @user ||= current_user%>
<div class="stats">
  <a href="<%= following_user_path(@user) %>" >
    <strong id="following_<%= @user.id%>" class="stat">
      <%= @user.followed_users.count %>
    </strong>
    关注
  </a>

  <a href="<%=followers_user_path(@user) %>">
    <strong id="followers_<%= @user.id%>" class="followers stat">
      <%= @user.followers.count %>
    </strong>
    粉丝
  </a>
</div>
