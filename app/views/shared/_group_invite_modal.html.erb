<div id="inviteModal_<%=show_group.id%>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">申请参加</h3>
  </div>
  <%= simple_form_for GroupGroupship.new(), :remote => true do |f| %>
    <div class="modal-body">
    <p>选择你的一个group</p>
    <%= f.hidden_field :target_group_id, :value => show_group.id %>
    <%= f.collection_select :applied_group_id, current_user.active_groups, :id, :name%>
    <%= f.input :time, :label => "时间" %>
    <%= f.input :location, :label => "地点" %>
    <%= f.input :activity, :label => "活动" %>
    <%= f.input :description, :label => "对TA说的话", :as => :text,
      :input_html => { :rows => 3, class: 'span5' }%>
  </div>
    <div class="modal-footer">
      <button class="btn btn-primary">提交</button>
    </div>
  <% end %>
  </div>
